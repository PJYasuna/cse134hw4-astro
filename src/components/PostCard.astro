---
import FormattedDate from './FormattedDate.astro';

export interface Props {
  title: string;
  description: string;
  url: string;
  date: Date;
}

const { title, description, url, date } = Astro.props;
---

<article class="post-card">
  <h2><a href={url}>{title}</a></h2>

  <p class="date">
    <FormattedDate date={new Date(date)} />
  </p>

  <p>{description}</p>
</article>
